#!/bin/bash

# Configure network interface
ip addr add 192.168.101.10/24 dev eth0
ip link set eth0 up
ip route add default via 192.168.101.1

# Install required packages
apt-get update
apt-get install -y python3 python3-pip

# Create directory for victim server
mkdir -p /opt/victim
cd /opt/victim

echo "Known password victim server configured at 192.168.101.10:8081"
echo "Run: python3 auth_server.py --docker"